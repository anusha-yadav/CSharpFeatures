<div class="row">
@for (int i = 0; i < 5; i++)
{
    <div class="col-md-2">
            <div class="card template">
                <img id="imgWeatherIconUrl_@i" class="card-img-top" src="" alt="Weather Icon">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h1 class="display-4"><span id="lblTemp_@i"></span>&deg;C</h1>
                    <span id="lblDate_@i">
                    </span>
                </div>
                <div class="card-footer d-flex flex-column align-items-center justify-content-center">
                    <h4>
                        <span id="lblDay_@i"></span>
                    </h4>
                </div>
            </div>
    </div>
}
</div>
